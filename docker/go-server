# syntax=docker/dockerfile:1

#to create/update image from root:
#    docker build -t pokedle-server -f docker/go-server .
#to run container:
#   docker run --env-file .env --publish 3000:3000 pokedle-server:latest
FROM golang:1.19.5-alpine

WORKDIR /app

COPY /server/ /app/server/
COPY .env /app/.env #TODO: delete this <--- ?

RUN cd /app/server && go mod download
RUN cd /app/server && go build -o /out

EXPOSE 3000

CMD [ "/out" ]