# syntax=docker/dockerfile:1

#to create/update image from root:
#    docker build -t gabr0236/pokedle-client -f docker/vue-client .
#to run container:
#   docker run --env-file .env --publish 8000:8000 gabr0236/pokedle-client:latest
FROM --platform=linux/amd64 node:16.14.2
WORKDIR /app

COPY /client/ /app/client/
COPY package.json ./
COPY index.html ./
COPY vite.config.js ./

ARG SERVER_URL=http://34.79.55.16/
ENV SERVER_URL=${SERVER_URL}

ARG SERVER_API_URL=http://34.79.55.16/api
ENV SERVER_API_URL=${SERVER_API_URL}

# need to make sure relative file paths are correct, could use env to change path 
#   but this would create discrepency between prod/dev
COPY /server/data/pokemonData-v4.json /app/server/data/

RUN npm i

EXPOSE 8000

CMD ["npm", "run", "client"]
